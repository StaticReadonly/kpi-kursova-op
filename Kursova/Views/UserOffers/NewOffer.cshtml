@using Models.ControllerModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model NewOfferModel
@{
    ViewBag.Title = "New offer";
}

<link rel="stylesheet" href="~/css/Common/Buttons.css" />
<link rel="stylesheet" href="~/css/Common/Text.css" />
<link rel="stylesheet" href="~/css/Common/Containers.css" />

<form method="post" asp-controller="UserOffers" asp-action="NewOffer" class="borderCont width50p margin30 gap10">
    <div class="centerLblBig">
        Create new offer
    </div>
    <label asp-for="Price" class="label">
        Price
        <input type="number" step="0.01" min="0" asp-for="Price" class="input" />
        <span asp-validation-for="Price" class="txtRedErr"></span>
    </label>
    <label asp-for="Description" class="label">
        Description
        <textarea asp-for="Description" class="input textArea" maxlength="512">

        </textarea>
        <span asp-validation-for="Description" class="txtRedErr"></span>
    </label>
    <input type="hidden" asp-for="TenderId"/>
    <div class="btnCntrCont">
        <button type="submit" class="btnGrey">
            Create
        </button>
    </div>
</form>